  use_frameworks!

  # Pods for Buzz
  pod 'Firebase/Core'
  pod 'Firebase/Storage'
  pod 'Firebase/Database'
  pod 'Firebase/Auth'


  target 'BuzzTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BuzzUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
